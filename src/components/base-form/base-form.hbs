<form class="form">
  {{#if formTitle}}
    <div class="form-header">
      <h1 class="h1 ta-center">{{formTitle}}</h1>
    </div>
  {{/if}}
  <div class="form-content">
    {{#each inputs as |input|}}
      {{{TextInput placeholder=input.placeholder errors=errors name=input.name type=input.type validation=input.validation
                   events=input.events}}}
    {{/each}}
  </div>
  <div class="form-footer">
    <button type="submit" class="btn-primary">{{submitText}}</button>
    {{#if link}}
      <div class="ta-center">
        {{{link}}}
      </div>
    {{/if}}
  </div>
</form>
