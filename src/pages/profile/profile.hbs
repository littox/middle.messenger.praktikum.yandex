{{#extend "layout/main" }}
    {{#content "page-content"}}
        <nav class="profile-nav">
            <a href="../index/index.hbs" class="btn arrow-btn arrow-btn__left">
                &#11157;
            </a>
        </nav>
        <div class="profile-wrapper">
            <div class="profile">
                <img src="https://picsum.photos/130/130" alt="user_name" class="profile-avatar">
                <div class="profile-name">
                    Антон
                </div>
                <form action="" class="profile-form">
                    {{#each inputs.data as |input|}}
