                    {{/each}}
                </form>
                <div class="profile-actions">
                    <div class="profile-form-control">
                        <a href="#">Изменить данные</a>
                    </div>
                    <div class="profile-form-control">
                        <a href="#">Изменить пароль</a>
                    </div>
                    <div class="profile-form-control">
                        <a href="#" class="red">Выйти</a>
                    </div>
                </div>
            </div>
        </div>
    {{/content}}
{{/extend}}