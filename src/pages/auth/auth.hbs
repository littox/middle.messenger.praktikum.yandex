<div class="form-wrapper">
  <form action="{{action}}" class="form">
    <div class="form-header">
      <h1 class="h1 ta-center">{{formTitle}}</h1>
    </div>
    <div class="form-content">
      {{{TextInput placeholder="Логин" name="login" type="text"}}}
      {{{TextInput placeholder="Пароль" name="password" type="password"}}}
    </div>
    <div class="form-footer">
      <a href="{{submitLink}}" class="btn-primary">{{submitText}}</a>
      <p class="ta-center">
        <a href="../registration/registration.hbs" class="link-primary">Зарегистрироваться</a>
      </p>
    </div>
  </form>
</div>
