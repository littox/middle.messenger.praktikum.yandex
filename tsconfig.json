{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2017",
    "sourceMap": true,
    "noImplicitAny": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "strictNullChecks": true,
    "esModuleInterop": true,
  },
  "exclude": [
    "node_modules"
  ],
  "lib": [
    "ESNext",
    "DOM",
    "dom.iterable"
  ]
}
