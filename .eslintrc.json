{
  "extends": [
    "airbnb",
    "airbnb-typescript"
  ],
  "ignorePatterns": [
    "/dist/*",
    "/node_modules/*"
  ],
  "parserOptions": {
    "project": [
      "tsconfig.json"
    ]
  },
  "rules": {
    "import/prefer-default-export": [
      "off"
    ],
    "no-underscore-dangle": "off",
    "max-len": [
      "error",
      120
    ]
  }
}
